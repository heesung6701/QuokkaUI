<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ViewStub
        android:id="@+id/left_frame"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:inflatedId="@id/left_frame"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <ViewStub
        android:id="@+id/icon_frame"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:inflatedId="@id/icon_frame"
        app:layout_constraintStart_toEndOf="@id/left_frame"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout="@layout/layout_app_info_icon"
        />

    <ViewStub
        android:id="@+id/title_frame"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:inflatedId="@id/title_frame"
        app:layout_constraintStart_toEndOf="@id/icon_frame"
        app:layout_constraintEnd_toStartOf="@id/right_frame"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout="@layout/layout_app_info_title_single_line"
        />

    <ViewStub
        android:id="@+id/right_frame"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:inflatedId="@id/right_frame"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>